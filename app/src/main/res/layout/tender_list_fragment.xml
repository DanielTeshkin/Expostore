<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.tender.list.TenderListFragment">

    <data>
        <import type="android.view.View" alias="v"/>
        <variable
            name="tenderListVM"
            type="com.expostore.ui.tender.list.TenderListViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tender_title"
            style="@style/BoldTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тендер"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tender_title">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tender_list_til_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"

                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/tender_list_et_search"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:autofillHints=""

                    android:background="@drawable/style_edit_text"
                    android:hint="Поиск"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="16dp"
                    android:paddingTop="0dp"

                    android:paddingEnd="16dp"
                    android:paddingBottom="0dp"
                    android:text="@={tenderListVM.search}"
                    android:textColorHint="#8C162344"

                    tools:ignore="LabelFor,TextFields" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_specifications_background"
                android:src="@drawable/ic_specifications" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tender_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{tenderListVM::createTender}"
            android:text="Добавить объявление"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tender_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>