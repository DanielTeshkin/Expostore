<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_product_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_product_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/blue"
        tools:hint="25 000руб"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_search_product_images"/>

    <TextView
        android:id="@+id/tv_search_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_product_price"
        tools:hint="Диван кровать еврокнижка, Вегас" />

    <TextView
        android:id="@+id/tv_search_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_product_name"
        tools:hint="Здесь отображается заметка, написанная к товару, при наличии таковой" />

    <TextView
        android:id="@+id/tv_search_product_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_product_description"
        tools:hint="Адрес: Уфа, ул. Свердлова 90" />

    <LinearLayout
        android:id="@+id/ll_search_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_product_address">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search_product_call"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:cornerRadius="10dp"
            android:backgroundTint="@drawable/selector_blue_button"
            style="@style/BoldTextView"
            android:textSize="16sp"
            android:text="Позвонить"
            android:textColor="@color/white"
            android:letterSpacing="0.01"
            android:textAllCaps="false"/>

        <ImageButton
            android:id="@+id/btn_search_product_other"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_other_btn"
            android:layout_gravity="center"
            android:background="@drawable/other_btn_background" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>