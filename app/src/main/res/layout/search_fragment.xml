<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.SearchFragment">

    <data>
        <import type="android.view.View" alias="v"/>
        <variable
            name="searchVM"
            type="com.expostore.ui.search.SearchViewModel"/>
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/search_fragment_xml_constraintlayout_scene">

        <FrameLayout
            android:id="@+id/frame_search"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <View
                android:id="@+id/search_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/test_logo_profile"/>

        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_btn_filters"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_search_filters"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="18dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp" />

        <LinearLayout
            android:id="@+id/search_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/search_bottom_sheet_background">

            <View
                android:id="@+id/view"
                android:layout_width="40dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#CAD1D6"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_tl"

            android:layout_width="match_parent"
            android:layout_height="56dp"

            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"

            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false">

        <EditText

            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            style="@style/TextAppearance.MaterialComponents.Body1"
            android:background="@drawable/style_edit_text"

            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="16dp"

            android:hint="@string/search_et_hint"
            android:textColorHint="#8C162344"

            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="0dp"

            android:autofillHints=""
            android:inputType="text"
            tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>
    
</layout>